import os
from wordcloud import WordCloud
from konlpy.tag import Okt
from collections import Counter

형태소분석기 = Okt()

from konlpy.tag import Okt

# 형태소 분석기 초기화
형태소분석기 = Okt()

# 텍스트 분석
text = '올리브영같은 드럭스토어가 있었으면 좋겠다. 카페는 이제 별로야. 돈까스집은 싫다. 집에 가는게 너무 좋아'
분석결과 = 형태소분석기.pos(text)

# 필터링된 결과 저장할 리스트 초기화
명사 = []
동사 = []
긍정_형용사 = []
부정_형용사 = []
긍정_부사 = []
부정_부사 = []

# 필요한 품사 필터링
for 단어, 품사 in 분석결과:
    # 강제적으로 특정 단어를 원하는 품사로 분류
    if 단어 == '별로':
        부정_부사.append((단어, '부정 부사'))

    elif 품사 == 'Noun':  # 명사
        명사.append((단어, 품사))

    elif 품사 == 'Adjective':  # 형용사 (긍정/부정 형용사로 분류)
        if any(keyword in 단어 for keyword in ['좋', '사랑', '기대', '행복']):
            긍정_형용사.append((단어, '긍정 형용사'))
        elif any(keyword in 단어 for keyword in ['싫', '별로']):
            부정_형용사.append((단어, '부정 형용사'))
        # else:
        #     부정_형용사.append((단어, '부정 형용사'))

    elif 품사 == 'Adverb':  # 부사 (긍정/부정 부사로 분류)
        if any(keyword in 단어 for keyword in ['좋', '사랑', '기대', '행복']):
            긍정_부사.append((단어, '긍정 부사'))
        elif any(keyword in 단어 for keyword in ['싫','별로']):
            부정_부사.append((단어, '부정 부사'))
        else:
            부정_부사.append((단어, 품사))

    elif 품사 == 'Verb':  # 동사 (동사로 분류)
        동사.append((단어, 품사))

# 결과 출력
print("명사:", 명사)
print("동사:", 동사)
print("긍정 형용사:", 긍정_형용사)
print("부정 형용사:", 부정_형용사)
print("긍정 부사:", 긍정_부사)
print("부정 부사:", 부정_부사)

